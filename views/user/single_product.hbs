<!-- Open Content -->
<section class="portfolio">

    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-4 mt-2">
                <div class="card mb-3 img-hover-zoom img-hover-zoom--xyz mx-5">
                    <img class="card-img img-fluid " style="" src="/productimages/{{eachProduct.image.[0]}}"
                        alt="Card image cap" id="product-detail">
                </div>
                <div class="row">
                    <!--Start Controls-->
                    <div class="col-1 align-self-center">
                        <a href="#multi-item-example" role="button" data-bs-slide="prev">
                            <i class="text-dark fas fa-chevron-left"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                    </div>
                    <!--End Controls-->
                    <!--Start Carousel Wrapper-->
                    <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item"
                        data-bs-ride="carousel">
                        <!--Start Slides-->
                        <div class="carousel-inner product-links-wap" role="listbox">

                            <!--First slide-->
                            <div class="carousel-item active">
                                <div class="row">
                                    <div class="col-4">
                                        <a style="cursor: pointer;">
                                            <img class="card-img img-fluid"
                                                src="/productimages/{{eachProduct.image.[1]}}" alt="Product Image 1">
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a style="cursor: pointer;">
                                            <img class="card-img img-fluid"
                                                src="/productimages/{{eachProduct.image.[2]}}" alt="Product Image 2">
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a style="cursor: pointer;">
                                            <img class="card-img img-fluid"
                                                src="/productimages/{{eachProduct.image.[0]}}" alt="Product Image 3">
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!--/.First slide-->

                            <!--Second slide-->
                            <div class="carousel-item">
                                <div class="row">
                                    <div class="col-4">
                                        <a style="cursor: pointer;">
                                            <img class="card-img img-fluid"
                                                src="/productimages/{{eachProduct.image.[0]}}" alt="Product Image 4">
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a style="cursor: pointer;">
                                            <img class="card-img img-fluid"
                                                src="/productimages/{{eachProduct.image.[2]}}" alt="Product Image 5">
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a style="cursor: pointer;">
                                            <img class="card-img img-fluid"
                                                src="/productimages/{{eachProduct.image.[1]}}" alt="Product Image 6">
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!--/.Second slide-->

                            <!--Third slide-->
                            <div class="carousel-item">
                                <div class="row">
                                    <div class="col-4">
                                        <a style="cursor: pointer;">
                                            <img class="card-img img-fluid"
                                                src="/productimages/{{eachProduct.image.[1]}}" alt="Product Image 7">
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a style="cursor: pointer;">
                                            <img class="card-img img-fluid"
                                                src="/productimages/{{eachProduct.image.[0]}}" alt="Product Image 8">
                                        </a>
                                    </div>
                                    <div class="col-4">
                                        <a style="cursor: pointer;">
                                            <img class="card-img img-fluid"
                                                src="/productimages/{{eachProduct.image.[2]}}" alt="Product Image 9">
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!--/.Third slide-->
                        </div>
                        <!--End Slides-->
                    </div>
                    <!--End Carousel Wrapper-->
                    <!--Start Controls-->
                    <div class="col-1 align-self-center">
                        <a href="#multi-item-example" role="button" data-bs-slide="next">
                            <i class="text-dark fas fa-chevron-right"></i>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <!--End Controls-->
                </div>
            </div>

            <!-- col end -->
            <div class="col-lg-8 md-12 mt-2">
                <div class="card">
                    <div class="card-body">
                        <h3 class="h2" style="text-transform: capitalize;">{{eachProduct.brand}}</h3>
                        <h6>{{eachProduct.productname}}</h6>
                        <h5 class="mb-0"><mark>₹{{eachProduct.offerprice}}</mark> <small><del>₹{{eachProduct.mrp}}</del></small> <mark
                                style="color: red;">{{eachProduct.percentage}}% off</mark></h5>
                        </p>

                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Brand:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted" style="text-transform: capitalize;">
                                    <strong>{{eachProduct.brand}}</strong>
                                </p>
                            </li>
                        </ul>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Avaliable Color :</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>White / Black</strong></p>
                            </li>
                        </ul>
                        <input type="hidden" name="product-title" value="Activewear">
                        <div class="row">
                            <div class="col-auto">
                                <ul class="list-inline pb-3">
                                    <li class="list-inline-item">Size :
                                        <input type="hidden" name="product-size" id="product-size" value="S">
                                    </li>
                                    <li class="list-inline-item"><span class="btn btn-outline-primary btn-size"
                                            style="border-radius: 40%;">S</span>
                                    </li>
                                    <li class="list-inline-item"><span class="btn btn-outline-primary btn-size"
                                            style="border-radius: 40%;">M</span>
                                    </li>
                                    <li class="list-inline-item"><span class="btn btn-outline-primary btn-size"
                                            style="border-radius: 40%;">L</span>
                                    </li>
                                    <li class="list-inline-item"><span class="btn btn-outline-primary btn-size"
                                            style="border-radius: 40%;">XL</span>
                                    </li>
                                </ul>
                                <a href="/cart" class="btn btn-outline-success mb-2">Goto cart</a>
                            </div>
                        </div>
                        <div class="row pb-3">
                            <div class="col d-grid">
                                <button type="submit" class="btn btn-primary btn-lg"
                                    onclick="addtoWishlist('{{eachProduct._id}}')">Add to
                                    Wishlist <ion-icon name="heart-outline"></ion-icon></button>
                            </div>
                            <div class="col d-grid">
                                <a class="btn btn-outline-info btn-lg w-100" onclick="addtoCart('{{eachProduct._id}}')"
                                    type="submit" style="cursor: pointer;">Add to Cart
                                    <ion-icon name="cart-outline"></ion-icon></button>
                                </a>

                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
<!-- Close Content -->

<!-- Start Slider Script -->
<script src="assets/js/slick.min.js"></script>
<script>
    $('#carousel-related-product').slick({
        infinite: true,
        arrows: false,
        slidesToShow: 4,
        slidesToScroll: 3,
        dots: true,
        responsive: [{
            breakpoint: 1024,
            settings: {
                slidesToShow: 3,
                slidesToScroll: 3
            }
        },
        {
            breakpoint: 600,
            settings: {
                slidesToShow: 2,
                slidesToScroll: 3
            }
        },
        {
            breakpoint: 480,
            settings: {
                slidesToShow: 2,
                slidesToScroll: 3
            }
        }
        ]
    });
</script>
<!-- End Slider Script -->